<div class="row">
    <div class="col-md-12">
        <h2>Employees</h2>
        <hr>


        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Employee Num</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Manager ID</th>
                        <th>Status</th>
                        <th>Department</th>
                        <th>Hired On</th>
                    </tr>
                </thead>

                {{#each employees}}
                <tbody>
                    <tr>
                        <td>{{employeeNum}}</td>
                        <td>{{firstName}} {{lastName}}</td>
                        <td>{{email}}</td>
                        <td>{{addressStreet}} {{addressCity}} {{addressState}} {{addressPostal}}</td>
                        <td>{{isManager}}</td>
                        <td>{{status}}</td>
                        <td>{{department}}</td>
                        <td>{{hireDate}}</td>
                    </tr>
                </tbody>


                {{/each}}
            </table>
        </div>
