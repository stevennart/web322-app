<div class="row">

    <div class="col-md-12">
        <h2>{{employee.firstName}} {{employee.lastName}} - Employee: {{employee.employeeNum}}</h2>
        <hr>
 
        <form method="post" action="/employee/update">
            <input type="hidden" name="employeeNum" value={{employee.employeeNum}}>
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="firstName">First Name:</label>
                            <input class="form-control" id="firstName" name="firstName" type="text" value="{{employee.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="lastName">Last Name:</label>
                            <input class="form-control" id="lastName" name="lastName" type="text" value="{{employee.lastName}}" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" value="{{employee.email}}">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SSN">Social Security Num:</label> 
                            <input type="text" class="form-control" id="SSN" name="SSN" value="{{employee.SSN}}" readonly>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressStreet">Address (Street):</label>
                            <input type="text" class="form-control" id="addressStreet" name="addressStreet" value="{{employee.addressStreet}}">
                        </div>
                    </div>
                     <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressCity">Address (City):</label>
                            <input type="text" class="form-control" id="addressCity" name="addressCity" value="{{employee.addressCity}}">

                        </div>
                    </div>
                     <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressState">Address (State):</label>
                            <input type="text" class="form-control" id="addressState" name="addressState" value="{{employee.addressState}}">
                        </div>
                    </div>
                     <div class="col-md-3">
                        <div class="form-group">
                            <label for="addressPostal">Address (Zip Code):</label>
                            <input type="text" class="form-control" id="addressPostal" name="addressPostal" value="{{employee.addressPostal}}">

                        </div>
                    </div>
                </div>
            </fieldset>
                <legend>Company Information</legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager">Manager:</label>
                            <input type="checkbox" class="form-control" id="isManager" name="isManager" {{#if employee.isManager}}checked{{/if}}> 
                        </div>
                    </div>
                     <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum">Employee's Manager Number:</label>
                            <input type="text" class="form-control" id="employeeManagerNum" name="employeeManagerNum" value="{{employee.employeeManagerNum}}">
                        </div>
                    </div>
                     <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label>
                            <br>
                            <label class="checkbox-inline">
                                 <input type="radio" name="status" id="statusFT" value="{{employee.status}}" {{#equal employee.status "Full Time"}}checked{{/equal}}> Full Time 
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="status" id="statusPT" value="{{employee.status}}" {{#equal employee.status "Part Time"}}checked{{/equal}}> Part Time
                            </label>
                        </div>
                    </div>
                     <div class="col-md-3">
                        <div class="form-group">
                            <label for="department">Department:</label>
                            <select class="form-control" id="department" name="department" value="{{employee.addressPostal}}">
                                <option value="1" {{#equal employee.department "1"}}selected{{/equal}}>Creative Services</option>
                                <option value="2" {{#equal employee.department "2"}}selected{{/equal}}>Product Development</option>
                                <option value="3" {{#equal employee.department "3"}}selected{{/equal}}>Marketing</option>
                                <option value="4" {{#equal employee.department "4"}}selected{{/equal}}>Strategic Planning</option>
                                <option value="5" {{#equal employee.department "5"}}selected{{/equal}}>Accounting</option>
                                <option value="6" {{#equal employee.department "6"}}selected{{/equal}}>Human Resources</option>
                                <option value="7" {{#equal employee.department "7"}}selected{{/equal}}>Quality Analysis</option>
                            </select> 
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="hireDate">Hire Date</label>
                            <input type="text" class="form-control" id="hireDate" name="hireDate" value="{{employee.hireDate}}" readonly>
                        </div>
                    </div>
                </div>
            <fieldset>






            </fieldset>
            <hr>
            <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
        </form>
    </div>
       
</div>